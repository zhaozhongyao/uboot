&spi1 {
    #address-cells = <1>;
    #size-cells = <0>;
    status = "okay";

	spidev@0 {
		compatible = "rohm,dh2228fv";
		status = "okay";
		reg = <0>;
		spi-max-frequency = <10000000>;
	};
	spidev@1 {
		compatible = "rohm,dh2228fv";
		status = "okay";
		reg = <1>;
		spi-max-frequency = <10000000>;
	};

};

